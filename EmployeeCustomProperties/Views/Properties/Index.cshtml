@model IEnumerable<EmployeeCustomProperties.Models.Property>

@{
    ViewData["Title"] = "Properties";
}

<h2>Properties</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Property</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Type</th>
            <th>Required</th>
            <th>Dropdown Options</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var property in Model)
        {
            <tr>
                <td>@property.Name</td>
                <td>@property.Type</td>
                <td>@(property.IsRequired ? "Yes" : "No")</td>
                <td>
                    @if (property.Type == PropertyType.Dropdown && property.DropdownOptions != null && property.DropdownOptions.Any())
                    {
                        <ul>
                            @foreach (var option in property.DropdownOptions)
                            {
                                <li>@option.Value</li>
                            }
                        </ul>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
