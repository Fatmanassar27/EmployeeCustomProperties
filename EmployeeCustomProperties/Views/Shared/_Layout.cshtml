<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EmployeeCustomProperties</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">

    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background-color: #e3edf9;
            margin: 0;
            padding: 0;
        }

        /* Sidebar */
        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            height: 100%;
            width: 15%;
            background: linear-gradient(180deg, #253d90, #121c3e);
            padding-top: 20px;
            color: white;
        }

            .sidebar a {
                display: block;
                padding: 12px 20px;
                color: white;
                text-decoration: none;
                font-weight: 500;
                transition: background 0.3s;
                font-size: 1.2rem;
            }

                .sidebar a:hover {
                    background: rgba(255, 255, 255, 0.1);
                }

        /* Main content */
        .content {
            margin-left: 230px;
            padding: 20px;
        }

        /* Header */
        .header {
            background: white;
            padding: 15px 20px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.05);
            border-radius: 8px;
            margin-bottom: 20px;
        }

            .header h2 {
                color: #253d90;
                font-weight: bold;
            }

        /* Card style */
        .card {
            border-radius: 10px;
            box-shadow: 0px 4px 8px rgba(0,0,0,0.05);
        }
    </style>
</head>
<body>

    <!-- Sidebar -->
    <div class="sidebar" style="float:left">
        <h4 class="text-center mb-4">EMP System</h4>
        <a asp-controller="Employees" asp-action="Index">👤 Employees</a>
        <a asp-controller="Properties" asp-action="Index">⚙️ Properties</a>
    </div>

    <!-- Main Content -->
    <div class="content" style="float:right; width:85%">
        <div class="header">
            <h2>@ViewData["Title"]</h2>
        </div>

        <main>
            @RenderBody()
        </main>
    </div>

    <div class="clearfix"></div>

   
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
